<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeHandlers>
        <typeHandler handler="org.example.UUIDTypeHandler"/>
    </typeHandlers>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/playgrounddb"/>
                <property name="username" value="pompom"/>
                <property name="password" value="pompom"/>

            </dataSource>
        </environment>
    </environments>

    <mappers>

        <mapper resource="BlogMapper.xml"/>

        <mapper resource="allDataType.xml"/>

    </mappers>

</configuration>
